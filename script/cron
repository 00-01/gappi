#### ---------------------------------------------------------------- SETUP
@reboot source ~/gappi/script/autorun.sh >> ~/log/run.log
@reboot sudo chmod 666 /dev/ttyS0
@reboot sdsss

#### ---------------------------------------------------------------- MAIN
# every day 7-23 every 2 minutes 
*/2 7-23 * * * source ~/gappi/script/autorun.sh >> ~/log/run.log
*/1 7-23 * * * python3 ~/gappi/poster.py >> ~/log/poster.log

#### ---------------------------------------------------------------- REBOOT
# every day 2am
0 2 * * * sudo shutdown now -r

#### ---------------------------------------------------------------- REMOVE
# every month 2am
0 2 1 * * truncate -s 0 log/*

